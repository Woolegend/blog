<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/atom-one-dark.min.css"
        rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.snow.css" />

    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="meta-data">
        <!-- user authority -->
        <input id="authority" type="hidden" value="<%= authority %>">
        <!-- post access authority -->
        <input id="access" type="hidden" value="public">
        <!-- post id -->
        <input id="post-id" type="hidden" value="<%= post._id %>">
        <!-- login state -->
        <input id="is-login" type="hidden" value="<%= login %>">
    </div>

    <div class="root">

        <div class="left-navigation">
            <%- include('nav') %>
        </div>

        <div class="page-wrapper">
            <div class="main-wrapper">

                <!-- header -->
                <div class="container">
                    <header class="header-content">
                        <div class="header-title">
                            <h1>
                                <%= post.title %>
                            </h1>
                        </div>
                        <div class="header-writer">
                            <p>
                                <%= post.username %>
                            </p>
                        </div>
                    </header>
                </div>

                <!-- util -->
                <div class="container">
                    <div class="top-navigation">
                        <div class="post-active">
                            <i class="fa-solid fa-unlock"></i>
                            <button class="active-btn">
                                <i class="fa-solid fa-circle active"></i>
                            </button>
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <div class="post-edit">
                            <a class="edit-btn a-tag-btn" href="/edit/<%= post._id %>">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                        <div class="post-delete">
                            <button class="delete-btn button-tag-btn">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- content -->
                <div class="container">
                    <main class="content">
                        <article class="main-page-content">
                            <div class="ql-editor">
                                <%- post.html %>
                            </div>
                        </article>
                    </main>
                </div>

                <!-- comment list -->
                <div class="container">
                    <div class="comment-title">
                        <i class="fa-regular fa-comments"></i>
                        댓글
                        [<span class="comment-count">0</span>]
                    </div>

                    <div class="comment-list">

                    </div>
                </div>

                <!-- comment input form -->
                <div class="container">

                    <!-- logout -->
                    <div class="alert-info">
                        <i class="fa-regular fa-bell"></i>
                        댓글을 작성하시려면
                        <button>로그인</button>
                        하세요
                    </div>

                    <!-- login -->
                    <div class="comment-input-wrapper">

                        <div class="comment-input-header">
                            <div class="comment-input-title">
                                <i class="fa-regular fa-circle-user"></i>
                                댓글작성
                            </div>
                            <button class="nav-tap nav-tap-active comment-btn" type="button">
                                <i class="fa-solid fa-t"></i>
                                텍스트
                            </button>
                            <button class="nav-tap emoticon-btn" type="button">
                                <i class="fa-regular fa-face-smile"></i>
                                이모티콘
                            </button>
                        </div>

                        <!-- text comment input -->
                        <form action="/comment" class="comment-form" method="post">
                            <input name="postId" type="hidden" value="<%= post._id%>">
                            <input name="type" type="hidden" value="text">
                            <textarea name="content" class="comment-input" rows="3" placeholder="댓글을 입력하세요"></textarea>
                            <div class="comment-input-alert"></div>
                            <button type="submit" class="comment-submit-btn">
                                작성
                            </button>
                        </form>

                        <!-- emoticon comment input -->
                        <div class="emoticon-input" data-load="false">
                            <div class="emoticon-card">
                                <div class="emoticon-main">
                                    <div class="emoticon-content"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- footer -->
                <div class="container">
                    <footer></footer>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="/js/detail.js"></script>
    <script type="module" src="/js/nav.js"></script>
</body>

</html>